<h2>Редактирование способа доставки</h2>

<%= form_for @delivery_method, :url => admin_delivery_method_path(@delivery_method), :method => :put do |f| -%>
  <p>
    <%= f.label :title, 'Название' %><br/>
    <%= f.text_area :title %>
  </p>
  <%= f.submit "Сохранить" %> или <%= link_to 'Отменить', admin_delivery_method_path %>
<% end -%>