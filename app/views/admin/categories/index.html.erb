<h2>Категории для формы заказа</h2>

<table id="categories">
	<thead>
		<tr>
			<th>Название</td>
			<th colspan="3">Действия</td>
		</tr>
	</thead>
	<tbody data-update-url="<%= sort_admin_categories_path %>">
		<% @categories.each do |cat| %>
			<%= content_tag_for(:tr, cat) do %>
				<td><%= cat.title %></td>
				<td><%= link_to 'Просмотр', admin_category_path(cat) %></td>
				<td><%= link_to 'Изменить', edit_admin_category_path(cat) %></td>
				<td><%= link_to 'Удалить', admin_category_path(cat), :method => :delete, :confirm => 'Вы уверены?' %></td>
			<% end %>
		<% end %>
	</tbody>
</table>
<%= link_to 'Добавить', new_admin_category_path %>