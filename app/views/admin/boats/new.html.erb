<h2>Новая лодка</h2>

<%= form_for @boat, :url => admin_boats_path, :html => { :multipart => true } do |f| -%>
	<div class='left_column_form'>
		<div class='form_row'>
			<div class='form_label'><%= f.label :boat_category_id, 'Поставщик' %></div>
			<div class='form_field'>
				<%= f.collection_select :boat_category_id, @boat_categories, :id, :title %>
			</div>
		</div>
		<div class='form_row'>
			<div class='form_label'><%= f.label :model, 'Модель' %></div>
			<div class='form_field'><%= f.text_field :model %></div>
		</div>
		<div class='form_row'>
			<div class='form_label'><%= f.label :motor, 'Моторная?' %></div>
			<div class='form_field'><%= f.check_box :motor %></div>
		</div>
		<div class='form_row'>
			<div class='form_label'><%= f.label :url_title, 'Метка для пути' %></div>
			<div class='form_field'><%= f.text_field :url_title %></div>
		</div>
		<div class='form_row'>
			<div class='form_label'><%= f.label :price, 'Цена' %></div>
			<div class='form_field'><%= f.text_field :price %></div>
		</div>
		<%= f.fields_for :images do |builder| %>
	    <%= render "images_fields", :f => builder %>
	  <% end %>			
  <%= f.submit "Сохранить" %> или <%= link_to 'Отменить', admin_boats_path %>
	</div>
<% end -%>