<h1>Страницы сайта</h1>

<table>
	<tbody>
		<tr>
			<th>Заголовок</th>
			<th>URL</th>
			<th colspan="3">Действия</th>
		</tr>
	<% @pages.each do |page| %>
		<tr>
			<td><%= page.title %></td>
			<td><%= page.url %></td>
			<td><%= link_to "Посмотреть", "/#{page.url}", :target=> 'blank'%></td>
			<td><%= link_to "Редактировать", edit_admin_page_path(page) %></td>
			<td><%= link_to "Удалить", admin_page_path(page), :method => :delete, :confirm => "Вы уверены?"%></td>
		</tr>	
	<% end %>
	</tbody>
</table>

<%= link_to "Добавить страницу", new_admin_page_path %>