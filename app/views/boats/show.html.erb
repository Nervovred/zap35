<div class="colorbox_heading"><h1><%= @boat.title %></h1>
<div class="product">
	<div class="colobox_picture"><%= image_tag @boat.images[0].picture.url(:high), :style => 'width:350px;' %></div>
	<div class="product_description">
		<table class="product_table">
			<% @category.options_hash.each do |key, value| %>
				<tr>
					<td><%= value %></td>
					<td><%= raw @boat.options_val(key) %></td>
				</tr>
			<% end %>
		</table>
		<table>
			<tr>
				<td class="price_column">Цена: <%= number_to_currency(@boat.price, :delimiter => ' ', :unit => 'р.', :format => "%n %u", :precision => 0) %></td>
				<td>
					<div class="colorbox_heading"><%= link_to "В корзину", add_to_cart_path(:item_id => @boat.id, :item_type => 'Boat'), :remote => true, :rel => 'nofollow', :class => 'button_large' %></div>
				</td>
			</tr>
		</table>			
	</div>
</div>