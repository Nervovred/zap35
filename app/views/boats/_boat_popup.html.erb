<div class="colorbox_content">
<div class="colorbox_heading"><h1>Лодка <%= category.menu_title%> <%=boat.model %></h1>
<div class="colobox_picture"><%= image_tag boat.images[0].picture.url(:high), :style => 'width:350px;' %></div>
<div class="colorbox_description">
	<% category.options_hash.each do |key, value| %>
		<div class="colorbox_text_left">
			<%= value %>
		</div>
		<div class="colorbox_text_right">
			<%= raw boat.options_val(key) %>
		</div>
	<% end %>
</div>
<div class="colorbox_heading"><h1><%= number_to_currency(boat.price, :delimiter => ' ', :unit => 'р.', :format => "%n %u", :precision => 0) %><br/>
<%= link_to "Добавить в корзину", add_to_cart_path(:item_id => boat.id, :item_type => 'Boat'), :remote => true, :rel => 'nofollow' %></h1></div>
</div>